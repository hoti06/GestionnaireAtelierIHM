{% extends "AtelierMaterialBundle::layout.html.twig" %} 

{% block title %}
  Delete a material - {{ parent() }}
{% endblock %}
 
{% block material_body %}
 
  <h2>Delete a material</h2>
 
  <p>
    Are you sure you want to delete the material "{{ material.id }}" {% 
    
    if material.product.nbMaterials() <= 0 
    %}(This will also delete the related product {{ material.product.name }} as this material is its last){% 
    
    else 
    %}({{ material.product.nbMaterials() }} materials remaining from the product {{ material.product.name }}){% 
    
    endif 
    %} ?
	
    
    
    
  </p>
 
  <form action="{{ path('atelier_material_delete', {'id': material.id}) }}" method="post">
    <a href="{{ path('atelier_material_disp', {'id': material.id}) }}" class="btn">
      <i class="icon-chevron-left"></i>
      Go back to the material
    </a>
    <input type="submit" value="Delete" class="btn btn-danger" />
    {{ form_rest(form) }}
  </form>
 
{% endblock %}
