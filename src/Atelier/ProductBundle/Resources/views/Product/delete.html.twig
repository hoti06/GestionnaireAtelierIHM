{% extends "AtelierProductBundle::layout.html.twig" %} 

{% block title %}
  Delete a product - {{ parent() }}
{% endblock %}
 
{% block product_body %}
 
  <h2>Delete a product</h2>
 
  <p>
    Are you sure you want to delete the product "{{ product.name }}" ?
  </p>
 
  <form action="{{ path('atelier_product_delete', {'id': product.id}) }}" method="post">
    <a href="{{ path('atelier_product_disp', {'id': product.id}) }}" class="btn">
      <i class="icon-chevron-left"></i>
      Go back to the product
    </a>
    <input type="submit" value="Delete" class="btn btn-danger" />
    {{ form_rest(form) }}
  </form>
 
{% endblock %}
