{% extends "AtelierProductBundle::layout.html.twig" %}
 
{% block title %}
  List of Products - {{ parent() }}
{% endblock %}
 
{% block product_body %}

<h3>List of Products</h3>
 
<p>
      {% for message in app.session.flashbag.get('info') %}
        <i>{{ message }}</i>
      {% endfor %}
</p>


<ul>
  {% for product in list_products %}
	<p>
		{% include "AtelierProductBundle:Product:product.html.twig" %} (Category <a href="{{ path('atelier_category_disp', {'id': product.category.id}) }}">{{ product.category.name }} </a>)
	</p>
    <hr />
  {% else %}
    <p>There aren't any products for the moment</p>
  {% endfor %}
</ul>
  <div class="pagination">
    <ul>
      {% for p in range(1, nbPage) %}
        <li{% if p == page %} class="active"{% endif %}>
          <a href="{{ path('atelier_product_dispAll', {'page': p}) }}">{{ p }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>

{% endblock %}
