{% extends "AtelierCategoryBundle::layout.html.twig" %}
 
{% block title %}
  Liste des Catégories - {{ parent() }}
{% endblock %}
 
{% block category_body %}
<p>
<a href="{{ path('atelier_category_new') }}" class="btn">
      Créer une nouvelle catégorie
      <i class="icon-chevron-right"></i>
</a>
</p>


<h3>Liste des Catégories</h3>
 
<p>
      {% for message in app.session.flashbag.get('info') %}
        <i>{{ message }}</i>
      {% endfor %}
</p>



<ul>
  {% for category in liste_categories %}
	<p>
		{% include "AtelierCategoryBundle:Category:category.html.twig" %}
	</p>
    <hr />
  {% else %}
    <p>Pas (encore !) de catégories</p>
  {% endfor %}
</ul>
  <div class="pagination">
    <ul>
      {% for p in range(1, nombrePage) %}
        <li{% if p == page %} class="active"{% endif %}>
          <a href="{{ path('atelier_category_dispAll', {'page': p}) }}">{{ p }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>

{% endblock %}
